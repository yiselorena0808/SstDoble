<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Piel"
    android:orientation="vertical"
    tools:context=".controller.FormReportes">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/black"
        android:paddingHorizontal="8dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/list"
            android:contentDescription="Icono Lista" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/img"
            android:contentDescription="Logo" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Reportes"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginVertical="16dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Campos de formulario (igual como los pasaste) -->

            <!-- ID del reporte -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID Reporte:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etId"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="ID (autogenerado)"
                    android:background="@android:color/white"
                    android:padding="8dp"
                    android:enabled="true"
                    android:inputType="number" />
            </LinearLayout>
            <!-- Nombre Usuario -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Usuario:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etNombreUsuarioR"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Ingrese nombre"
                    android:background="@android:color/white"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Cargo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargo del usuario:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etCargo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Ingrese cargo"
                    android:background="@android:color/white"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Cédula -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cédula:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etCedula"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Ingrese cédula"
                    android:background="@android:color/white"
                    android:inputType="number"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etFecha"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Ingrese fecha"
                    android:background="@android:color/white"
                    android:inputType="date"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Lugar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lugar:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etLugar"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Ingrese lugar"
                    android:background="@android:color/white"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Descripción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Ingrese descripción"
                    android:background="@android:color/white"
                    android:gravity="top|start"
                    android:padding="8dp"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <!-- Imagen y Archivos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:weightSum="2"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Imagen:"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etImagen"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Ruta imagen"
                        android:background="@android:color/white"
                        android:padding="8dp" />
                </LinearLayout>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Archivos:"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etArchivos"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Ruta archivos"
                        android:background="@android:color/white"
                        android:padding="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado:"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etEstado"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Ingrese estado"
                    android:background="@android:color/white"
                    android:padding="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Botón corregido para coincidir con el binding -->
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Reporte"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/Verde"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:elevation="4dp" />

</LinearLayout>
