<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Piel"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle Lista de Chequeo"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="#333333"
            android:layout_marginBottom="20dp"/>

        <!-- Nombre Usuario -->
        <TextView
            android:text="Nombre Usuario:"
            android:textStyle="bold"
            android:textColor="#333333"
            android:id="@+id/tvUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <!-- Fecha -->
        <TextView
            android:text="Fecha:"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:id="@+id/tvFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <!-- Hora -->
        <TextView
            android:text="Hora:"
            android:textStyle="bold"
            android:textColor="#333333"
            android:id="@+id/tvHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <!-- Modelo -->
        <TextView
            android:text="Modelo:"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:id="@+id/tvModelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <!-- Marca -->
        <TextView
            android:text="Marca:"
            android:textStyle="bold"
            android:textColor="#333333"
            android:id="@+id/tvMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <!-- SOAT -->
        <TextView
            android:text="SOAT:"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:id="@+id/tvSoat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <!-- Técnico -->
        <TextView
            android:text="Técnico:"
            android:textStyle="bold"
            android:textColor="#333333"
            android:id="@+id/tvTecnico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <!-- Kilometraje -->
        <TextView
            android:text="Kilometraje:"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:id="@+id/tvKilometraje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

    </LinearLayout>
</ScrollView>

