<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Piel"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle del Reporte"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="#333333"
            android:layout_marginBottom="20dp"/>

        <!-- Nombre Usuario -->
        <TextView

            android:text="Nombre Usuario:"
            android:textStyle="bold"
            android:textColor="#333333"
            android:id="@+id/tvNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <!-- Cargo -->
        <TextView
            android:text="Cargo:"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:id="@+id/tvCargo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <!-- Cédula -->
        <TextView
            android:text="Cédula:"
            android:textStyle="bold"
            android:textColor="#333333"
            android:id="@+id/tvCedula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <!-- Fecha -->
        <TextView
            android:text="Fecha:"
            android:textStyle="bold"
            android:textColor="#333333"
            android:id="@+id/tvFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <!-- Lugar -->
        <TextView
            android:text="Lugar:"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:id="@+id/tvLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <!-- Descripción -->
        <TextView
            android:text="Descripción:"
            android:textStyle="bold"
            android:textColor="#333333"
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <!-- Imagen -->
        <TextView
            android:text="Imagen (ruta o URL):"
            android:textStyle="bold"
            android:textColor="#333333"
            android:id="@+id/tvImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <!-- Archivos -->
        <TextView
            android:text="Archivos (ruta o URL):"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:id="@+id/tvArchivos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

        <!-- Estado -->
        <TextView
            android:text="Estado:"
            android:textStyle="bold"
            android:textColor="#333333"
            android:id="@+id/tvEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"/>

    </LinearLayout>
</ScrollView>
