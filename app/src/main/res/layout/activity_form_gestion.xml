<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Piel"
    tools:context=".controller.FormGestion">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/black">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/list"
            android:layout_marginLeft="10dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/img" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión EPP"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#333333" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/scroll_brackground"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- id_usuario -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID Usuario"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_id_usuario"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:hint="Ingrese ID del usuario"
                android:padding="10dp"
                android:inputType="number"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_nombre"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:hint="Ingrese su nombre"
                android:padding="10dp"
                android:inputType="textPersonName"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- apellido -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_apellido"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:hint="Ingrese su apellido"
                android:padding="10dp"
                android:inputType="textPersonName"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- cedula -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cédula"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_cedula"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:hint="Ingrese su cédula"
                android:padding="10dp"
                android:inputType="number"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- cargo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargo"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_cargo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:hint="Ingrese su cargo"
                android:padding="10dp"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- productos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Productos"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_productos"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:hint="Ingrese el/los producto(s)"
                android:padding="10dp"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- cantidad -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_cantidad"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:hint="Ingrese la cantidad"
                android:padding="10dp"
                android:inputType="number"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- estado -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_estado"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:hint="pendiente / aprobado / rechazado"
                android:padding="10dp"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- fecha_creacion -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de creación"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_fecha_creacion"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:hint="AAAA-MM-DD"
                android:padding="10dp"
                android:inputType="date"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <!-- Importancia -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ingrese Importancia"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/rg_importancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:text="ALTA" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="MEDIA" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="BAJA" />
    </RadioGroup>

    <Button
        android:id="@+id/btnGuardarGestion"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/Verde"
        android:text="Enviar Solicitud" />
</LinearLayout>
